<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ static('css/style.css') }}">
    <title>Shortly</title>
</head>

<body>
    <header>
		{% include 'navbar.jinja' %}
	</header>
    <div class="container-fluid h-100 bg-color">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <form class="form-example" method="post">
                    <h1>Shortly <span class="white-text">url</span></h1>
                    <p class="description">Transform long link to a shorten url</p>
                    <div class="input-group mb-3">
                        <input type="url" class="form-control rounded-pill" placeholder="Your url here" aria-label="Your url here" aria-describedby="basic-addon2" id="originalLink">
                        <div class="input-group-append">
						  <input type="hidden" id = "csrfmiddlewaretoken" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                          <button class="btn btn-outline-light btn-color rounded-pill" type="button" id="shortenButton">Shorten</button>
                        </div>
                      </div>
                      <h2 id="resultLink" class="link-result"></h2>
                </form>
            </div>
        </div>
    </div>

    {% import 'chat.jinja' as chat %}
	{{chat.chat(userName)}}

    {% include 'scripts.jinja' %}
	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<script src="{{ static("scripts/index.js") }}"></script>
</body>

</html>
