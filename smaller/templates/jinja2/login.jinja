<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ static('css/style.css') }}">
    <title>Shortly</title>
</head>

<body>
    <header>
		{% include 'navbar.jinja' %}
	</header>
    <div class="container-fluid h-100 bg-color">
        <div id="login">
            <div class="container">
                <div id="login-row" class="row h-100 justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                                <h3 class="text-center login-header">Login</h3>
                                <div class="form-group">
                                    <label for="username" class="login-text-color">Username or email:</label><br>
                                    <input type="text" name="username" id="InputEmail" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="login-text-color">Password:</label><br>
                                    <input type="password" name="pass" id="InputPassword" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="remember-me" class="login-text-color"><span>Remember me</span>Â <span>
                                    <input id="InputRememberMe" name="remember-me" type="checkbox"></span></label><br>
                                    <button type="submit" class="btn btn-color btn-outline-light" id="login-button" data-dismiss="modal">Submit</button>
                                </div>
                                <div id="register-link">
                                    <a href="register" class="login-text-color">Register here</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   {% include 'scripts.jinja' %}
</body>

</html>
